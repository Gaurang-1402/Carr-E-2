<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <link name="base_link">
	</link>
	<!-- CHASSIS -->
	<joint name="chassis_joint" type="fixed">
		<parent link="base_link" />
		<child link="chassis" />
		<origin xyz="-0.1 0 0" />
	</joint>
	<link name="chassis">
		<visual>
			<origin xyz="0.15 0 0.075" rpy="0 0 0" />
			<geometry>
				<box size="0.3 0.3 0.15">
				</box>
			</geometry>
			<material name="white">
			</material>
		</visual>
        <collision>
			<origin xyz="0.15 0 0.075" rpy="0 0 0" />
			<geometry>
				<box size="0.3 0.3 0.15">
				</box>
			</geometry>
			<material name="white">
			</material>
		</collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
	</link>
	<joint name="left_wheel_joint" type="continuous">
		<parent link="base_link" />
		<child link="left_wheel" />
		<!-- rotate -pi/2 about x-axis -->
		<origin xyz="0 0.175 0" rpy="-${pi/2} 0 0" />
		<!-- rotate about z=1 -->
		<axis xyz="0 0 1" />
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
	</joint>
	<!-- WHEELS -->
	<link name="left_wheel">
		<visual>
			<geometry>
				<cylinder length="0.04" radius="0.05">
				</cylinder>
			</geometry>
			<material name="blue">
			</material>
		</visual>
        <collision>
			<geometry>
				<cylinder length="0.04" radius="0.05">
				</cylinder>
			</geometry>
			<material name="blue">
			</material>
		</collision>
	</link>
	<joint name="right_wheel_joint" type="continuous">
		<parent link="base_link" />
		<child link="right_wheel" />
		<!-- rotate pi/2 about x-axis -->
		<origin xyz="0 -0.175 0" rpy="${pi/2} 0 0" />
		<!-- rotate about z=-1 -->
		<axis xyz="0 0 -1" />
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
	</joint>
	<link name="right_wheel">
		<visual>
			<geometry>
				<cylinder length="0.04" radius="0.05">
				</cylinder>
			</geometry>
			<material name="blue">
			</material>
		</visual>
        <collision>
			<geometry>
				<cylinder length="0.04" radius="0.05">
				</cylinder>
			</geometry>
			<material name="blue">
			</material>
		</collision>
	</link>
	<!-- CASTER WHEEL -->
	<joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"></parent>
        <child link="caster_wheel"></child>
        <origin xyz="0.24 0 0" rpy="0 0 0"></origin>
	</joint>
    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"></sphere>
            </geometry>
            <material name="black"></material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"></sphere>
            </geometry>
            <material name="black"></material>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
</robot>
